<table>
  <caption>ブックマーク一覧</caption>
  <thead>
    <tr>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>本文</th>
    </tr>
  </thead>
  <%= @bookmarks.each do |bookmark| %>
    <% @post = Post.find_by(id: bookmark.post_id) %>
    <% @comments = Comment.where(post_id: @post.id) %>
    <% @comments.each do |comment| %>
     <%= comment.comment_content %>
    <% end %>
  <% end %> 